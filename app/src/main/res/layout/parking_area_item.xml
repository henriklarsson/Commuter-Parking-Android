<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

        <TextView
                android:id="@+id/parking_area_item_textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/parking_area_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
        <ImageView
                android:id="@+id/parking_area_item_imageview_parking"
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher_round"

                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/parking_area_item_textview_title"
                android:contentDescription="@string/parking_area_title"/>
        <TextView
                android:id="@+id/parking_area_item_textview_info"
                android:text="Total parking"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                 android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/parking_area_item_textview_title" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/parking_area_item_imageview_parking"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>